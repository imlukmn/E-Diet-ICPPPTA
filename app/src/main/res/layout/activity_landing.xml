<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LandingActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="338dp"
            android:layout_height="42dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Selamat Datang!"
            android:textAlignment="viewStart"
            android:textColor="@color/gray_800"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="368dp"
            android:layout_height="252dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/landing_page"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="48dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Selamat datang di Aplikasi  e-Diet kami, tempat Anda dapat mengubah pola makan Anda dengan mudah dan efektif untuk mencapai kesehatan yang lebih baik."
                    android:textAlignment="textStart"
                    android:textColor="@color/gray_400"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_signup"
                    android:text="Mulai Sekarang"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:layout_marginHorizontal="48dp"
                    android:layout_marginTop="45dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:letterSpacing="0"
                    android:background="@drawable/custom_btn"
                    android:backgroundTint="@color/blue_400"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:text="Sudah memiliki akun?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textAlignment="textStart"
                        android:textColor="@color/gray_800"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_login"
                        android:text=" Login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAlignment="textStart"
                        android:textColor="@color/blue_400"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>